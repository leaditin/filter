{
    "name": "leaditin/filter",
    "description": "Programmatically filter and normalize data and files.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "filter", "lowercase", "uppercase", "camelcase", "leaditin"
    ],
    "authors": [
        {
            "name": "Igor Vuckovic",
            "email": "igor@vuckovic.biz"
        }
    ],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 || ^6.0",
        "friendsofphp/php-cs-fixer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Leaditin\\Filter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Leaditin\\Filter\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "cs-fix": "php-cs-fixer fix --config=.php_cs",
        "cs-check": "php-cs-fixer fix --config=.php_cs -v --diff --dry-run"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
